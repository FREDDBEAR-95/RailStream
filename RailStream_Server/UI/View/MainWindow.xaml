<Window x:Class="RailStream_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailStream_Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize" ShowInTaskbar="False">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Background="#FF353535">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="660"/>
                </Grid.ColumnDefinitions>
                
                <!-- Navbar menu -->
                <Grid HorizontalAlignment="Left" Width="180">
                    <Border Background="#FF191919">
                        <StackPanel Width="180" Height="300">
                            <Button Width="180" Height="40" Background="#FF191919" BorderBrush="#FF191919">
                                <Label Foreground="White">Панель Упраления</Label>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
